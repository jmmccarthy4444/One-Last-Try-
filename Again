<body>

	<nav class="navMenu  border">
		<a id="Home" onclick="navigate(this.id)" href="#"> <i class="fa-solid fa-house"></i> Home</a>
		<a id="School" onclick="navigate(this.id)" href="#"> <i class="fa-solid fa-book"></i> School</a>
		<a id="Work" onclick="navigate(this.id)" href="#"> <i class="fa-solid fa-briefcase"></i> Work</a>
		<a id="Budget" onclick="navigate(this.id)" href="#"> <i class="fa-solid fa-money-bill-1-wave"></i> Budget</a>
		<a id="Hobbies" onclick="navigate(this.id)" href="#"> <i class="fa-solid fa-heart"></i> Hobbies</a>
	</nav>


	<script>

		let direction = "horizontal";
		if (direction === "vertical") {
			document.head.insertAdjacentHTML("beforeend", `<style>.navMenu a {display: block; text-align:left; margin:7px} i{width:15px; margin-right:5px} .navMenu{margin:3px}</style>`)
		}


		function navigate(id) {

			if (id == 'Home')
				window.open("https://www.notion.so/Home-Base-30b1829969f643edbc2d5c0ca44ee008", '_blank').focus();
			else if (id == 'School')
				window.open("https://www.notion.so/Midd-4b05466e35bb4c0a8ea03ba9597ee95a", '_blank').focus();
			else if (id == 'Work')
				window.open("https://www.notion.so/Work-ff5d6b8acfce4f27a42287d42ed785eb", '_blank').focus();
			else if (id == 'Budget')
				window.open("https://www.notion.so/Budget-cd072483dad74518a2a9265a1e346304", '_blank').focus();
			else if (id == 'Hobbies')
				window.open("https://www.notion.so/Hobbies-d0addc66b1d24efcb3af6775cd534f5d", '_blank').focus();
		}
	</script>


